<UserControl x:Class="JSON_Editor.Views.UserControls.WindowHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JSON_Editor.Views.UserControls"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="500">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.75*"></ColumnDefinition>

                <ColumnDefinition Width="150"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Rectangle Fill="Transparent"></Rectangle>


            <!-- Close & Minimize Buttons -->
            <Grid Grid.Column="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition Name="MaximizeButton_ColumnDefinition" Width="50"></ColumnDefinition>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                </Grid.ColumnDefinitions>


                <Button Name="MinimizeButton" Style="{StaticResource StandardHeaderButton}" Click="Button_Click_Minimize" FontFamily="Segoe MDL2 Assets"  Content="&#xE921;"></Button>
                <Button Name="MaximizeButton" Style="{StaticResource StandardHeaderButton}" Grid.Column="1" Click="Button_Click_Maximize" FontFamily="Segoe MDL2 Assets" Content="&#xE922;"></Button>
                <Button Name="CloseButton" Style="{StaticResource CloseButton}" Grid.Column="2" FontFamily="Segoe MDL2 Assets" Click="Button_Click_Close" Content="&#xE8BB;"></Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
