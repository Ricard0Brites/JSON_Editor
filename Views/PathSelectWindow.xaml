<Window x:Class="JSON_Editor.Views.PathSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Editor.Views" 
        xmlns:UserControls="clr-namespace:JSON_Editor.Views.UserControls"
        mc:Ignorable="d"
        Width="500"  Height="300"  ResizeMode="NoResize" UseLayoutRounding="True" Background="#1e1e23">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness='1' CornerRadius='10' CaptionHeight='0' />
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <UserControls:WindowHeader CanMaximize="False" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.75*"></ColumnDefinition>
                <ColumnDefinition Width="0.25*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock Text="Choose the location to save the new file in:" Foreground="White" Padding="20,0,0,0" VerticalAlignment="Center"></TextBlock>
            <TextBox Name="TextBox" Grid.Row="1" Height="20" Margin="20,10,20,0" VerticalAlignment="Top"></TextBox>
            <Button Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Height="40" Margin="20,0,20,0" Content="Browse" Style="{StaticResource Style_StandardButton}" Click="Button_Browse"></Button>
            <Button Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Center" Height="50"  Margin="20,0,20,0" Content="Accept" Style="{StaticResource Style_StandardButton}" Click="Button_Accept"></Button>
            
        </Grid>
    </Grid>
</Window>
