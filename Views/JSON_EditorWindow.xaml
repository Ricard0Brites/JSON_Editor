<Window x:Class="JSON_Editor.Views.JSON_EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Editor.Views"
        xmlns:UserControls="clr-namespace:JSON_Editor.Views.UserControls"
        xmlns:Templates="clr-namespace:JSON_Editor.Views.UserControls.Templates"
        mc:Ignorable="d"
        x:Name="EditorWindow"
        Title="MainWindow"
        MinHeight="300"
        MinWidth="1000"
        ResizeMode="CanResizeWithGrip"
        UseLayoutRounding="True"
        Background="#1e1e23">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness='1'
                      CornerRadius='10'
                      CaptionHeight='0' />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="CaretBrush"
                    Value="White"></Setter>
        </Style>
    </Window.Resources>


    <Grid>
        <!-- Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Grid Content-->
        <UserControls:WindowHeader CanMaximize="False" />
        <Grid Margin="5,0,5,5"
              Grid.Row="1">

            <!-- Column Definitions -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="0.3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!-- Grid Content-->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          Padding="0,0,2,0">
                <StackPanel Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            Width="auto">
                    <!-- Header -->
                    <Grid Height="20" Margin="0,0,0,5"
                          HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{Binding ColumnWidthsVal[0], RelativeSource={RelativeSource AncestorType=Window}}" />
                            <ColumnDefinition Width="{Binding ColumnWidthsVal[1], RelativeSource={RelativeSource AncestorType=Window}}" />
                            <ColumnDefinition Width="{Binding ColumnWidthsVal[2], RelativeSource={RelativeSource AncestorType=Window}}" />
                            <ColumnDefinition Width="{Binding ColumnWidthsVal[3], RelativeSource={RelativeSource AncestorType=Window}}" />
                        </Grid.ColumnDefinitions>
                        <!-- File Type Table Header Label -->
                        <Border BorderThickness="1"
                                BorderBrush="White">
                            <TextBlock Grid.Column="0"
                                       TextDecorations="None"
                                       TextAlignment="Center"
                                       Text="File Type"
                                       FontSize="13"
                                       Background="#626262"
                                       Foreground="White"></TextBlock>
                        </Border>
                        <!-- Path Table Header Label -->
                        <Border BorderThickness="1"
                                BorderBrush="White"
                                Grid.Column="1">
                            <TextBlock TextDecorations="None"
                                       TextAlignment="Center"
                                       Text="Path"
                                       FontSize="13"
                                       Background="#626262"
                                       Foreground="White">
                            </TextBlock>
                        </Border>
                        <!-- Size in bytes Table Header Label -->
                        <Border BorderThickness="1"
                                BorderBrush="White"
                                Grid.Column="2">
                            <TextBlock Foreground="White"
                                       TextDecorations="None"
                                       TextAlignment="Center"
                                       Text="Size B"
                                       FontSize="13"
                                       Background="#626262">
                            </TextBlock>
                        </Border>
                        <!-- Tags Table Header Label -->
                        <Border BorderThickness="1"
                                BorderBrush="White"
                                Grid.Column="3">
                            <TextBlock TextDecorations="None"
                                       TextAlignment="Center"
                                       Text="Tags"
                                       FontSize="13"
                                       Background="#626262"
                                       Foreground="White">
                            </TextBlock>
                        </Border>
                    </Grid>
                    <!-- End of Header -->

                    <!-- Entries -->
                    <ListView Name="ItemsList"
                              Style="{StaticResource Style_ListView_NoFootPrint}"
                              ItemsSource="{Binding JSONItems}"
                              HorizontalAlignment="Left"
                              HorizontalContentAlignment="Left"
                              SelectedItem="{Binding CurrentAsset}">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <!-- Each Object gets its own isntance of a UserControl -->
                                <Templates:JSONEntry_Template Padding="0"
                                                              Margin="0"
                                                              ColumnWidths="{Binding ColumnWidthsVal, RelativeSource={RelativeSource AncestorType=Window}}">
                                </Templates:JSONEntry_Template>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <!-- End Of Entries -->
                </StackPanel>
            </ScrollViewer>

            <!-- Side Panel -->
            <Grid Grid.Column="1"
                  Margin="5,0,5,0"
                  MaxWidth="500">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Height="25"
                            Content="Add Entry"
                            VerticalAlignment="Center"
                            BorderThickness="0"
                            Margin="0,1,0,1"
                            Command="{Binding AddEntry}"></Button>
                    <Button Grid.Column="1"
                            Height="25"
                            Content="Remove Entry"
                            BorderThickness="0"
                            VerticalAlignment="Center"
                            Margin="1,1,0,1"
                            Command="{Binding RemoveEntry}"></Button>
                </Grid>
                <Button Grid.Row="3"
                        Height="50"
                        Content="Save JSON"
                        VerticalAlignment="Center"
                        BorderThickness="0"
                        FontSize="10"
                        Command="{Binding RequestSave}"></Button>

            </Grid>
            <!-- Side Panel End -->

        </Grid>
    </Grid>
</Window>