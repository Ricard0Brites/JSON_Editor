<Window x:Class="JSON_Editor.Views.JSON_EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Editor.Views"
        xmlns:UserControls="clr-namespace:JSON_Editor.Views.UserControls"
        xmlns:Templates="clr-namespace:JSON_Editor.Views.UserControls.Templates"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="500" MinWidth="1000" ResizeMode="CanResizeWithGrip" UseLayoutRounding="True" Background="#1e1e23">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness='1' CornerRadius='10' CaptionHeight='0' />
    </WindowChrome.WindowChrome>

    <Grid>
        <!-- Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Grid Content-->
        <UserControls:WindowHeader CanMaximize="False" />
        <Grid Margin="5,0,5,5" Grid.Row="1">

            <!-- Column Definitions -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.6*"></ColumnDefinition>
                <ColumnDefinition Width="0.4*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!-- Grid Content-->
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Padding="0,0,2,0">
                <StackPanel>
                    <Expander Background="#64646464" Header="{Binding Entry.Name}">
                        <StackPanel Margin="10,0,5,0">
                            <!-- Header -->
                            <Grid Height="20">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Margin="0,0,0,0" 
                                             Grid.Column="0" TextDecorations="None" 
                                             TextAlignment="Center" 
                                             Text="FileType" FontSize="13" Background="#626262" Foreground="White"                                  
                                    ></TextBlock>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White" Grid.Column="1">
                                    <TextBlock Margin="0,0,0,0"
                                      TextDecorations="None" 
                                     TextAlignment="Center" 
                                     Text="Path" FontSize="13" Background="#626262" Foreground="White"
                                    >
                                    </TextBlock>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White" Grid.Column="2">
                                    <TextBlock Margin="0,0,0,0" Foreground="White"
                                         TextDecorations="None"
                                        TextAlignment="Center" Text="Size Mb" 
                                        FontSize="13" Background="#626262"
                                    >
                                    </TextBlock>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White" Grid.Column="3">
                                    <TextBlock Margin="0,0,0,0" 
                                      TextDecorations="None" 
                                     TextAlignment="Center"  
                                     Text="Tags" FontSize="13" Background="#626262" Foreground="White"
                                    >
                                    </TextBlock>
                                </Border>

                            </Grid>
                            <!-- End of Header -->

                            <!-- Entries -->

                            <ItemsControl ItemsSource="{Binding JSONItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <!-- Each Object gets its own isntance of a UserControl -->
                                        <Templates:JSONEntry_Template/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- End Of Entries -->

                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
            <Rectangle Fill="Red" Grid.Column="1"></Rectangle>
        </Grid>
    </Grid>

</Window>